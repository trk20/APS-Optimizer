{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "build-wasm",
      "command": "dotnet",
      "type": "process",
      "args": [
        "build",
        "${workspaceFolder}/APS_Optimizer_V3/APS_Optimizer_V3.csproj",
        "/property:GenerateFullPaths=true",
        "/property:TargetFramework=net8.0-browserwasm",
        "/consoleloggerparameters:NoSummary"
      ],
      "problemMatcher": "$msCompile"
    },
    {
      "label": "publish-wasm",
      "command": "dotnet",
      "type": "process",
      "args": [
        "publish",
        "${workspaceFolder}/APS_Optimizer_V3/APS_Optimizer_V3.csproj",
        "/property:GenerateFullPaths=true",
        "/property:TargetFramework=net8.0-browserwasm",
        "/consoleloggerparameters:NoSummary"
      ],
      "problemMatcher": "$msCompile"
    },
    {
      "label": "build-desktop",
      "command": "dotnet",
      "type": "process",
      "args": [
        "build",
        "${workspaceFolder}/APS_Optimizer_V3/APS_Optimizer_V3.csproj",
        "/property:GenerateFullPaths=true",
        "/property:TargetFramework=net8.0-desktop",
        "/consoleloggerparameters:NoSummary"
      ],
      "problemMatcher": "$msCompile"
    },
    {
      "label": "publish-desktop",
      "command": "dotnet",
      "type": "process",
      "args": [
        "publish",
        "${workspaceFolder}/APS_Optimizer_V3/APS_Optimizer_V3.csproj",
        "/property:GenerateFullPaths=true",
        "/property:TargetFramework=net8.0-desktop",
        "/consoleloggerparameters:NoSummary"
      ],
      "problemMatcher": "$msCompile"
    },
    {
      "label": "build-windows",
      "command": "dotnet",
      "type": "process",
      "args": [
        "build",
        "${workspaceFolder}/APS_Optimizer_V3/APS_Optimizer_V3.csproj", // Adjust path if needed
        "/property:TargetFramework=net8.0-windows10.0.26100",
        "/property:GenerateFullPaths=true",
        "/consoleloggerparameters:NoSummary"
      ],
      "problemMatcher": "$msCompile",
      "group": {
        "kind": "build",
        "isDefault": false // Don't make it the default build task unless intended
      }
    }
  ]
}
