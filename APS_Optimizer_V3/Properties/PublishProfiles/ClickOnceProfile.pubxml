<?xml version="1.0" encoding="utf-8"?>
<!-- https://go.microsoft.com/fwlink/?LinkID=208121. -->
<Project>
  <PropertyGroup>
    <ApplicationRevision>0</ApplicationRevision>
    <ApplicationVersion>1.0.4.*</ApplicationVersion>
    <BootstrapperEnabled>True</BootstrapperEnabled>
    <Configuration>Release</Configuration>
    <CreateWebPageOnPublish>False</CreateWebPageOnPublish>
    <GenerateManifests>true</GenerateManifests>
    <Install>True</Install>
    <InstallFrom>Disk</InstallFrom>
    <IsRevisionIncremented>True</IsRevisionIncremented>
    <IsWebBootstrapper>False</IsWebBootstrapper>
    <MapFileExtensions>True</MapFileExtensions>
    <OpenBrowserOnPublish>False</OpenBrowserOnPublish>
    <Platform>x64</Platform>
    <PublishProtocol>ClickOnce</PublishProtocol>
    <PublishReadyToRun>False</PublishReadyToRun>
    <PublishSingleFile>True</PublishSingleFile>
    <RuntimeIdentifier>win-x64</RuntimeIdentifier>
    <SelfContained>False</SelfContained>
    <SignatureAlgorithm>(none)</SignatureAlgorithm>
    <SignManifests>False</SignManifests>
    <SkipPublishVerification>false</SkipPublishVerification>
    <TargetFramework>net8.0-desktop</TargetFramework>
    <UpdateEnabled>False</UpdateEnabled>
    <UpdateMode>Foreground</UpdateMode>
    <UpdateRequired>False</UpdateRequired>
    <WebPageFileName>Publish.html</WebPageFileName>
    <UnoUIUseRuntimeAssemblyResolution>false</UnoUIUseRuntimeAssemblyResolution>
    <SkipValidatePackageReferences>true</SkipValidatePackageReferences>
    
    <!-- Application Identity -->
    <ProductName>APS Optimizer</ProductName>
    <PublisherName>trk20</PublisherName>
    <SuiteName>APS Optimizer Suite</SuiteName>
    
    <!-- Update Configuration -->
    <UpdateInterval>7</UpdateInterval>
    <UpdateIntervalUnits>Days</UpdateIntervalUnits>
    <UpdatePeriodically>false</UpdatePeriodically>
    <UpdateRequired>false</UpdateRequired>
    <MinimumRequiredVersion>1.0.0.0</MinimumRequiredVersion>
    
    <!-- Installation -->
    <InstallUrl></InstallUrl>
    <PublishUrl></PublishUrl>
    <SupportUrl></SupportUrl>
    <ErrorReportUrl></ErrorReportUrl>
    <FallbackCulture>en-US</FallbackCulture>
    <DisallowUrlActivation>true</DisallowUrlActivation>
    
    <!-- Simplified security settings compatible with .NET Core -->
    <UseApplicationTrust>false</UseApplicationTrust>
    <TrustUrlParameters>false</TrustUrlParameters>
    
    <!-- Force .NET 8 targeting -->
    <TargetFrameworkIdentifier>.NETCoreApp</TargetFrameworkIdentifier>
    <TargetFrameworkVersion>v8.0</TargetFrameworkVersion>
    <RequiresMinimumFramework35SP1>false</RequiresMinimumFramework35SP1>

    <!-- Set the publish directory -->
    <PublishDir>bin\Release\net8.0-desktop\win-x64\app.publish\</PublishDir>
  </PropertyGroup>
  <ItemGroup>
    <!-- Updated bootstrapper for .NET 8 -->
    <BootstrapperPackage Include="Microsoft.NetCore.DesktopRuntime.8.0.x64">
      <Install>true</Install>
      <ProductName>.NET 8.0 Desktop Runtime (x64)</ProductName>
    </BootstrapperPackage>
  </ItemGroup>
</Project>