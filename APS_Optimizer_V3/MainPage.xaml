<!-- MainPage.xaml -->
<Page x:Class="APS_Optimizer_V3.MainPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:local="using:APS_Optimizer_V3"
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
      xmlns:viewmodels="using:APS_Optimizer_V3.ViewModels"
      xmlns:converters="using:APS_Optimizer_V3.Converters"
      xmlns:controls="using:APS_Optimizer_V3.Controls"
      mc:Ignorable="d"
      Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">
    <Page.DataContext>
        <viewmodels:MainViewModel x:Name="CustomViewModel" />
    </Page.DataContext>
    <!-- converters moved to App.xaml for global access -->
    <Grid Padding="5">
        <Grid.RowDefinitions>
            <RowDefinition Height="*" />
            <!-- Content Area -->
            <RowDefinition Height="Auto" />
            <!-- Bottom Controls -->
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*" />
            <!-- Left Area (Editor + Result) -->
            <ColumnDefinition Width="Auto" />
            <!-- Right Area (Shapes) -->
        </Grid.ColumnDefinitions>
        <!-- === Left Side: Editor and Result Grids Side-by-Side === -->
        <!-- Replace StackPanel with Grid -->
        <Grid Grid.Row="0"
              Grid.Column="0"
              ColumnSpacing="10">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*" />
                <!-- Editor Area -->
                <ColumnDefinition Width="*" />
                <!-- Result Area -->
            </Grid.ColumnDefinitions>
            <!-- Editor Grid Area -->
            <StackPanel Grid.Column="0"
                        HorizontalAlignment="Center"
                        Spacing="5">
                <TextBlock Text="Grid Editor"
                           Style="{ThemeResource SubtitleTextBlockStyle}"
                           HorizontalAlignment="Center" />
                <Grid HorizontalAlignment="Center"
                      VerticalAlignment="Top">
                    <Border x:Name="EditorGridBorder"
                            BorderBrush="Gray"
                            BorderThickness="1"
                            HorizontalAlignment="Center"
                            VerticalAlignment="Top"
                            Width="{Binding CalculatedGridTotalWidth, Mode=OneWay}"
                            Height="{Binding CalculatedGridTotalHeight, Mode=OneWay}">
                        <!-- ScrollViewer might be needed if grid can exceed container -->
                        <ScrollViewer HorizontalScrollBarVisibility="Disabled"
                                      VerticalScrollBarVisibility="Disabled">
                            <!-- *** USE THE NEW CONTROL *** -->
                            <controls:CellGridControl ItemsSource="{Binding GridEditorCells, Mode=OneWay}"
                                                      CellSize="{Binding CellSize, Mode=OneWay}"
                                                      CellSpacing="{Binding CellSpacing, Mode=OneWay}"
                                                      IsEditorGrid="True"
                                                      DataContext="{Binding}" />
                            <!-- Pass ViewModel's DataContext down -->
                            <!-- Width/Height are determined by layout -->
                        </ScrollViewer>
                    </Border>
                    <!-- Canvas for Symmetry Overlay (if needed) -->
                    <Canvas x:Name="SymmetryOverlayCanvas"
                            Width="{Binding ActualWidth, ElementName=EditorGridBorder}"
                            Height="{Binding ActualHeight, ElementName=EditorGridBorder}"
                            IsHitTestVisible="False" />
                </Grid>
                <StackPanel Orientation="Horizontal"
                            HorizontalAlignment="Center">
                    <TextBlock Text="Symmetry:"
                               HorizontalAlignment="Center"
                               VerticalAlignment="Center"
                               Margin="60,0,5,0" />
                    <ComboBox ItemsSource="{Binding SymmetryOptions}"
                              SelectedItem="{Binding SelectedSymmetry, Mode=TwoWay}"
                              HorizontalAlignment="Center"
                              VerticalAlignment="Center"
                              MinWidth="180"
                              Margin="0,0,10,0" />
                    <ToggleSwitch VerticalAlignment="Center"
                                  IsOn="{Binding UseSoftSymmetry, Mode=TwoWay}"
                                  HorizontalAlignment="Right"
                                  OnContent="Soft"
                                  OffContent="Hard"
                                  Margin="0,0,0,0"
                                  ToolTipService.ToolTip="If soft, splits inconsistent symmetric groups (e.g., overlapping center) into individual pieces. If hard, discards such groups entirely." />
                </StackPanel>
                <Button Content="Solve"
                        Command="{Binding SolveCommand}"
                        HorizontalAlignment="Center"
                        Style="{ThemeResource AccentButtonStyle}" />
                <StackPanel Orientation="Horizontal"
                            Spacing="5"
                            VerticalAlignment="Center"
                            HorizontalAlignment="Center"
                            Visibility="{Binding IsSolving, Converter={StaticResource BoolToVis}}">
                    <ProgressRing IsActive="{Binding IsSolving}"
                                  Width="20"
                                  Height="20" />
                    <TextBlock Text="{Binding CurrentSolveTime}"
                               VerticalAlignment="Center"
                               FontSize="14" />
                </StackPanel>
            </StackPanel>
            <!-- Result Grid Area -->
            <StackPanel Grid.Column="1"
                        HorizontalAlignment="Stretch"
                        VerticalAlignment="Top"
                        Spacing="5">
                <TextBlock Text="{Binding ResultTitle, Mode=OneWay}"
                           Style="{ThemeResource SubtitleTextBlockStyle}"
                           HorizontalAlignment="Center" />
                <Border BorderBrush="Gray"
                        BorderThickness="1"
                        HorizontalAlignment="Center"
                        VerticalAlignment="Top"
                        Width="{Binding CalculatedGridTotalWidth, Mode=OneWay}"
                        Height="{Binding CalculatedGridTotalHeight, Mode=OneWay}">
                    <ScrollViewer HorizontalScrollBarVisibility="Disabled"
                                  VerticalScrollBarVisibility="Disabled">
                        <!-- *** USE THE NEW CONTROL *** -->
                        <controls:CellGridControl ItemsSource="{Binding ResultGridCells, Mode=OneWay}"
                                                  CellSize="{Binding CellSize, Mode=OneWay}"
                                                  CellSpacing="{Binding CellSpacing, Mode=OneWay}"
                                                  IsEditorGrid="False"
                                                  DataContext="{Binding}" />
                        <!-- Pass ViewModel's DataContext down -->
                    </ScrollViewer>
                </Border>
                <Button Content="Export Result"
                        Command="{Binding ExportCommand}"
                        HorizontalAlignment="Center" />
            </StackPanel>
        </Grid>
        <!-- Right Side: Shapes (ADD CONTEXT MENU) -->
        <StackPanel Grid.Row="0"
                    Grid.Column="1"
                    Spacing="10"
                    MinWidth="250"
                    VerticalAlignment="Top">
            <TextBlock Text="Shapes"
                       HorizontalAlignment="Center"
                       Style="{ThemeResource SubtitleTextBlockStyle}" />
            <!-- ListView for Available Shapes -->
            <ListView x:Name="ShapesListView"
                      ItemsSource="{Binding AvailableShapes}"
                      MaxHeight="600"
                      SelectionMode="None"
                      CanReorderItems="False"
                      AllowDrop="False"
                      IsItemClickEnabled="False">
                <ListView.ItemTemplate>
                    <DataTemplate x:DataType="viewmodels:ShapeViewModel">
                        <Grid ColumnSpacing="15"
                              Margin="0,5">
                            <Grid.ColumnDefinitions>
                                <!-- Use calculated MaxPreviewColumnWidth from MainViewModel for consistent preview sizing -->
                                <ColumnDefinition MinWidth="{Binding DataContext.MaxPreviewColumnWidth, ElementName=ViewModel, Mode=OneWay}"
                                                  MinHeight="{Binding DataContext.MaxPreviewColumnWidth, ElementName=ViewModel, Mode=OneWay}" />
                                <ColumnDefinition Width="*" />
                                <!-- Controls Col -->
                            </Grid.ColumnDefinitions>
                            <!-- Context Menu for Edit/Remove -->
                            <Grid.ContextFlyout>
                                <MenuFlyout>
                                    <!-- Use Command binding if preferred, or Click handlers -->
                                    <MenuFlyoutItem Text="Edit Shape"
                                                    Click="EditShapeMenuItem_Click"
                                                    CommandParameter="{Binding}" />
                                    <MenuFlyoutItem Text="Remove Shape"
                                                    Click="RemoveShapeMenuItem_Click"
                                                    CommandParameter="{Binding}" />
                                </MenuFlyout>
                            </Grid.ContextFlyout>
                            <!-- Shape Preview -->
                            <Border Grid.Column="0"
                                    BorderBrush="LightGray"
                                    BorderThickness="0"
                                    VerticalAlignment="Center"
                                    HorizontalAlignment="Center"
                                    Padding="0">
                                <!-- ContentControl binds to the generated PreviewGrid UIElement -->
                                <ContentControl Content="{Binding PreviewGrid, Mode=OneWay}" />
                            </Border>
                            <!-- Shape Name and Controls -->
                            <StackPanel Grid.Column="1"
                                        VerticalAlignment="Center"
                                        Spacing="5">
                                <TextBlock Text="{Binding Name, Mode=OneWay}"
                                           FontWeight="SemiBold"
                                           TextTrimming="CharacterEllipsis" />
                                <CheckBox Content="Enabled"
                                          IsChecked="{Binding IsEnabled, Mode=TwoWay}"
                                          VerticalAlignment="Center" />
                                <!-- Add other info like Area if needed -->
                                <!-- <TextBlock Text="{Binding Shape.Area, StringFormat='Area: {0}'}" FontSize="10"/> -->
                            </StackPanel>
                        </Grid>
                    </DataTemplate>
                </ListView.ItemTemplate>
            </ListView>
            <!-- Add Shape Button -->
            <Button Content="Add Shape"
                    HorizontalAlignment="Center"
                    Command="{Binding ShowAddShapeDialogCommand}" />
        </StackPanel>
        <!-- ================================================= -->
        <!-- Bottom: Controls (No Changes) -->
        <StackPanel Grid.Row="1"
                    Grid.Column="0"
                    Grid.ColumnSpan="2"
                    Orientation="Horizontal"
                    Spacing="5"
                    HorizontalAlignment="Stretch">
            <!-- Use Spacing="10" or adjust per item -->
            <!-- **** Add TextBlock, Remove Header from ComboBox **** -->
            <TextBlock Text="Grid Template:"
                       VerticalAlignment="Center"
                       Margin="0,0,5,0" />
            <!-- Add right margin -->
            <ComboBox ItemsSource="{Binding TemplateOptions}"
                      SelectedItem="{Binding SelectedTemplate, Mode=TwoWay}"
                      VerticalAlignment="Center"
                      MinWidth="180"
                      Margin="0,0,15,0" />
            <TextBlock Text="Grid Width:"
                       VerticalAlignment="Center" />
            <NumberBox Value="{Binding GridWidth, Mode=TwoWay}"
                       SpinButtonPlacementMode="Inline"
                       Minimum="3"
                       Maximum="50"
                       SmallChange="2"
                       LargeChange="4"
                       Width="100"
                       Margin="0,0,15,0" />
            <TextBlock Text="Grid Height:"
                       VerticalAlignment="Center" />
            <NumberBox Value="{Binding GridHeight, Mode=TwoWay}"
                       SpinButtonPlacementMode="Inline"
                       Minimum="3"
                       Maximum="50"
                       SmallChange="2"
                       LargeChange="4"
                       Width="100"
                       Margin="0,0,15,0" />
        </StackPanel>
    </Grid>
</Page>