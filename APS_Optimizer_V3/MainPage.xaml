<!-- MainPage.xaml -->
<Page x:Class="APS_Optimizer_V3.MainPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:local="using:APS_Optimizer_V3"
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
      xmlns:viewmodels="using:APS_Optimizer_V3.ViewModels"
      xmlns:converters="using:APS_Optimizer_V3.Converters"
      mc:Ignorable="d"
      Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">
    <Page.DataContext>
        <viewmodels:MainViewModel x:Name="CustomViewModel" />
        <converters:BooleanToVisibilityConverter x:Key="BoolToVis" />
        <converters:InverseBooleanToVisibilityConverter x:Key="InverseBoolConverter" />
    </Page.DataContext>
    <Grid Padding="5">
        <Grid.RowDefinitions>
            <RowDefinition Height="*" />
            <!-- Content Area -->
            <RowDefinition Height="Auto" />
            <!-- Bottom Controls -->
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*" />
            <!-- Left Area (Editor + Result) -->
            <ColumnDefinition Width="Auto" />
            <!-- Right Area (Shapes) -->
        </Grid.ColumnDefinitions>
        <!-- === Left Side: Editor and Result Grids Side-by-Side === -->
        <!-- Replace StackPanel with Grid -->
        <Grid Grid.Row="0"
              Grid.Column="0"
              ColumnSpacing="10">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*" />
                <!-- Editor Area -->
                <ColumnDefinition Width="*" />
                <!-- Result Area -->
            </Grid.ColumnDefinitions>
            <!-- Editor Grid Area -->
            <StackPanel Grid.Column="0"
                        HorizontalAlignment="Center"
                        Spacing="5">
                <TextBlock Text="Grid Editor"
                           Style="{ThemeResource SubtitleTextBlockStyle}"
                           HorizontalAlignment="Center" />
                <Border BorderBrush="Gray"
                        BorderThickness="1"
                        HorizontalAlignment="Center">
                    <ScrollViewer HorizontalScrollBarVisibility="Auto"
                                  VerticalScrollBarVisibility="Auto">
                        <ItemsRepeater ItemsSource="{Binding GridEditorCells}"
                                       Width="{Binding CalculatedGridTotalWidth}">
                            <ItemsRepeater.Layout>
                                <UniformGridLayout MinItemWidth="15"
                                                   MinItemHeight="15"
                                                   Orientation="Horizontal"
                                                   MinColumnSpacing="1"
                                                   MinRowSpacing="1"
                                                   ItemsJustification="Start"
                                                   ItemsStretch="None" />
                            </ItemsRepeater.Layout>
                            <ItemsRepeater.ItemTemplate>
                                <DataTemplate x:DataType="viewmodels:CellViewModel">
                                    <Button Background="{Binding Background}"
                                            Command="{Binding CellClickedCommand}"
                                            MinWidth="15"
                                            MinHeight="15"
                                            Padding="0"
                                            Margin="0"
                                            BorderThickness="0.5"
                                            BorderBrush="LightGray"
                                            VerticalAlignment="Stretch"
                                            HorizontalAlignment="Stretch" />
                                </DataTemplate>
                            </ItemsRepeater.ItemTemplate>
                        </ItemsRepeater>
                    </ScrollViewer>
                </Border>
                <StackPanel Orientation="Horizontal">
                    <TextBlock Text="Force Symmetry:"
                               VerticalAlignment="Center"
                               Margin="0,0,5,0" />
                    <ComboBox ItemsSource="{Binding SymmetryOptions}"
                              SelectedItem="{Binding SelectedSymmetry, Mode=TwoWay}"
                              VerticalAlignment="Center"
                              MinWidth="180"
                              Margin="0,0,15,0" />
                    <Button Content="Solve"
                            Command="{Binding SolveCommand}"
                            HorizontalAlignment="Center"
                            Style="{ThemeResource AccentButtonStyle}" />
                </StackPanel>
                <StackPanel Orientation="Horizontal"
                            Spacing="5"
                            VerticalAlignment="Center"
                            HorizontalAlignment="Center"
                            Visibility="{Binding IsSolving, Converter={StaticResource BoolToVis}}">
                    <ProgressRing IsActive="{Binding IsSolving}"
                                  Width="20"
                                  Height="20" />
                    <TextBlock Text="{Binding CurrentSolveTime}"
                               VerticalAlignment="Center"
                               FontSize="14" />
                </StackPanel>
            </StackPanel>
            <!-- Result Grid Area -->
            <StackPanel Grid.Column="1"
                        HorizontalAlignment="Center"
                        Spacing="5">
                <TextBlock Text="{Binding ResultTitle}"
                           Style="{ThemeResource SubtitleTextBlockStyle}"
                           HorizontalAlignment="Center" />
                <Border BorderBrush="Gray"
                        BorderThickness="1"
                        HorizontalAlignment="Center">
                    <ScrollViewer HorizontalScrollBarVisibility="Auto"
                                  VerticalScrollBarVisibility="Auto">
                        <ItemsRepeater ItemsSource="{Binding ResultGridCells}"
                                       Width="{Binding CalculatedGridTotalWidth}">
                            <ItemsRepeater.Layout>
                                <UniformGridLayout MinItemWidth="15"
                                                   MinItemHeight="15"
                                                   Orientation="Horizontal"
                                                   MinColumnSpacing="1"
                                                   MinRowSpacing="1"
                                                   ItemsJustification="Start"
                                                   ItemsStretch="None" />
                            </ItemsRepeater.Layout>
                            <ItemsRepeater.ItemTemplate>
                                <DataTemplate x:DataType="viewmodels:CellViewModel">
                                    <Border Background="{Binding Background}"
                                            MinWidth="15"
                                            MinHeight="15"
                                            BorderThickness="0.5"
                                            BorderBrush="LightGray">
                                        <TextBlock Text="{Binding DisplayNumber}"
                                                   Foreground="Black"
                                                   HorizontalAlignment="Center"
                                                   VerticalAlignment="Center"
                                                   FontSize="8" />
                                    </Border>
                                </DataTemplate>
                            </ItemsRepeater.ItemTemplate>
                        </ItemsRepeater>
                    </ScrollViewer>
                </Border>
                <Button Content="Export Result"
                        Command="{Binding ExportCommand}"
                        HorizontalAlignment="Center" />
            </StackPanel>
        </Grid>
        <!-- Right Side: Shapes (ADD CONTEXT MENU) -->
        <StackPanel Grid.Row="0"
                    Grid.Column="1"
                    Spacing="10"
                    MinWidth="250">
            <TextBlock Text="Shapes"
                       HorizontalAlignment="Center"
                       Style="{ThemeResource SubtitleTextBlockStyle}" />
            <ListView x:Name="ShapesListView"
                      ItemsSource="{Binding AvailableShapes}"
                      MaxHeight="600"
                      SelectionMode="None"
                      CanReorderItems="False"
                      AllowDrop="False"
                      IsItemClickEnabled="False">
                <ListView.ItemTemplate>
                    <DataTemplate x:DataType="viewmodels:ShapeViewModel">
                        <Grid ColumnSpacing="10"
                              Margin="0,5">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="{Binding DataContext.MaxPreviewColumnWidth, ElementName=ShapesListView}" />
                                <ColumnDefinition Width="*" />
                                <!-- Controls Col -->
                            </Grid.ColumnDefinitions>
                            <Grid.ContextFlyout>
                                <MenuFlyout>
                                    <MenuFlyoutItem Text="Edit Shape"
                                                    Click="EditShapeMenuItem_Click" />
                                    <MenuFlyoutItem Text="Remove Shape"
                                                    Click="RemoveShapeMenuItem_Click" />
                                </MenuFlyout>
                            </Grid.ContextFlyout>
                            <Border Grid.Column="0"
                                    BorderBrush="LightGray"
                                    BorderThickness="1"
                                    VerticalAlignment="Center"
                                    HorizontalAlignment="Center"
                                    Padding="1">
                                <ContentControl Content="{Binding PreviewGrid}" />
                            </Border>
                            <StackPanel Grid.Column="1"
                                        VerticalAlignment="Top"
                                        Spacing="5">
                                <TextBlock Text="{Binding Name}"
                                           FontWeight="SemiBold" />
                                <CheckBox IsChecked="{Binding IsEnabled, Mode=TwoWay}"
                                          VerticalAlignment="Center" />
                            </StackPanel>
                        </Grid>
                    </DataTemplate>
                </ListView.ItemTemplate>
            </ListView>
            <!-- Button Command remains the same -->
            <Button Content="Add Shape"
                    HorizontalAlignment="Center"
                    Command="{Binding ShowAddShapeDialogCommand}" />
        </StackPanel>
        <!-- ================================================= -->
        <!-- Bottom: Controls (No Changes) -->
        <StackPanel Grid.Row="1"
                    Grid.Column="0"
                    Grid.ColumnSpan="2"
                    Orientation="Horizontal"
                    Spacing="5"
                    HorizontalAlignment="Stretch">
            <!-- Use Spacing="10" or adjust per item -->
            <!-- **** Add TextBlock, Remove Header from ComboBox **** -->
            <TextBlock Text="Grid Template:"
                       VerticalAlignment="Center"
                       Margin="0,0,5,0" />
            <!-- Add right margin -->
            <ComboBox ItemsSource="{Binding TemplateOptions}"
                      SelectedItem="{Binding SelectedTemplate, Mode=TwoWay}"
                      VerticalAlignment="Center"
                      MinWidth="180"
                      Margin="0,0,15,0" />
            <TextBlock Text="Grid Width:"
                       VerticalAlignment="Center" />
            <NumberBox Value="{Binding GridWidth, Mode=TwoWay}"
                       SpinButtonPlacementMode="Inline"
                       Minimum="3"
                       Maximum="50"
                       SmallChange="2"
                       LargeChange="10"
                       Width="120"
                       Margin="0,0,15,0" />
            <TextBlock Text="Grid Height:"
                       VerticalAlignment="Center" />
            <NumberBox Value="{Binding GridHeight, Mode=TwoWay}"
                       SpinButtonPlacementMode="Inline"
                       Minimum="3"
                       Maximum="50"
                       SmallChange="2"
                       LargeChange="10"
                       Width="120"
                       Margin="0,0,15,0" />
        </StackPanel>
    </Grid>
</Page>